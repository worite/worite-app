{
  "expo": {
    "name": "Worite - Belediye Değerlendirme",
    "slug": "worite",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "worite",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "description": "Türkiye'deki belediye hizmetlerini fotoğraflayın, değerlendirin ve şehrinizi daha iyi hale getirin. Worite ile vatandaş olarak sesinizi duyurun!",
    "privacy": "public",
    "primaryColor": "#6366f1",
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.worite.app",
      "buildNumber": "1",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Belediye hizmetlerini değerlendirmek için konumunuza ihtiyacımız var.",
        "NSCameraUsageDescription": "Belediye hizmetlerini fotoğraflamak için kamera izni gerekiyor.",
        "NSPhotoLibraryUsageDescription": "Belediye hizmetlerini fotoğraflamak için galeri izni gerekiyor.",
        "CFBundleDisplayName": "Worite",
        "CFBundleName": "Worite"
      },
      "appStoreUrl": "https://apps.apple.com/app/worite/id1234567890",
      "associatedDomains": [
        "applinks:worite.app"
      ]
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.worite.app",
      "versionCode": 1,
      "permissions": [
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Belediye hizmetlerini değerlendirmek için konumunuza ihtiyacımız var."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Belediye hizmetlerini fotoğraflamak için kamera izni gerekiyor."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "eas": {
        "projectId": "d89d73db-134f-4c1b-80c9-cee97b0a0d16"
      },
      "router": {}
    },
    "owner": "oktayeryatar"
  }
}
